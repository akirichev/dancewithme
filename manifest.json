{
	"manifest_version": 2,

	"name": "#ДАНСwithme",
	"description": "Това разширение показва предупредителен екран, когато отваряте сайт от медийната група на Делян Пеевски. #ДАНСwithme",
	"version": "0.5.1",
	"homepage_url": "http://ignorepeevski.tumblr.com/",
	"icons": {
		"16": "icon_16px.png",
		"48": "icon_48px.png",
		"128": "icon_128px.png"
	},

	"permissions": [
		"storage"
	],

	"web_accessible_resources": [
		"ignore.jpg"
	],

	"content_scripts": [ {
		"all_frames": true,
		"js": [ "init.js" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_start"
	} ]
}
